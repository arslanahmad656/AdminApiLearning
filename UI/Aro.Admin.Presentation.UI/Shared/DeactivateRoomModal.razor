@* Deactivate Room Confirmation Modal - NBE-115 *@

<MudDialog>
    <TitleContent>
        <div class="modal-title">
            <span>Deactivate Room?</span>
        </div>
    </TitleContent>
    <DialogContent>
        <p class="modal-message">
            This room will no longer appear in the Booking Engine or website. You can reactivate it at any time.
        </p>
    </DialogContent>
    <DialogActions>
        <div class="modal-actions">
            <MudButton OnClick="Cancel" Variant="Variant.Outlined" Class="cancel-btn">
                Cancel
            </MudButton>
            <MudButton OnClick="Deactivate" Variant="Variant.Filled" Class="deactivate-btn">
                Deactivate
            </MudButton>
        </div>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance? MudDialog { get; set; }

    [Parameter] public string RoomName { get; set; } = "";

    private void Cancel()
    {
        MudDialog?.Close(DialogResult.Cancel());
    }

    private void Deactivate()
    {
        MudDialog?.Close(DialogResult.Ok(true));
    }
}

