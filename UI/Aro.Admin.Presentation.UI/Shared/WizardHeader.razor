@inject NavigationManager NavigationManager

<div class="wizard-header d-flex justify-content-between align-items-center" data-bs-theme="dark">
    <h1 class="header-title">@HeaderTitle</h1>
    <div class="p-2">
        <button class="btn-close" aria-label="Close" @onclick="@OnClose"></button>
    </div>
</div>

<style>
    .wizard-header {
        padding: 16px 40px;
    }

    .header-title {
        font-size: 1.25rem;
        font-weight: 400;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    @@media (max-width: 768px) {
        .wizard-header {
            padding: 12px 16px;
        }

        .header-title {
            font-size: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .wizard-header {
            padding: 10px 12px;
        }

        .header-title {
            font-size: 0.9rem;
            max-width: calc(100vw - 80px);
        }
    }
</style>

@code {
    [Parameter] public string HeaderTitle { get; set; }

    [Parameter] public string ReturnTo { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
