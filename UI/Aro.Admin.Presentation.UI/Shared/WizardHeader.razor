@inject NavigationManager NavigationManager

<div class="d-flex justify-content-between align-items-center py-4 px-5" data-bs-theme="dark">
    <h1 class="fs-4 fw-normal">@HeaderTitle</h1>
    <div class="p-2">
        <button class="btn-close" aria-label="Close" @onclick="@OnClose"></button>
    </div>
</div>

@code {
    [Parameter] public string HeaderTitle { get; set; }

    [Parameter] public string ReturnTo { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
