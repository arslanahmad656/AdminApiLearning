@* Wizard Footer Component - Reusable footer for all wizard pages *@

<div class="wizard-footer">
    <div class="button-group">
        <button class="back-button"
                @onclick="OnBack"
                disabled="@BackDisabled">
            ← Back
        </button>

        @if (ShowSave)
        {
            @if (!HideNext)
            {
                <button class="next-button secondary-next"
                        @onclick="OnNext"
                        disabled="@NextDisabled">
                    Next →
                </button>
            }
            <button class="next-button save-button"
                    @onclick="OnSave"
                    disabled="@SaveDisabled">
                Save
            </button>
        }
        else
        {
            <button class="next-button"
                    @onclick="OnNext"
                    disabled="@NextDisabled">
                Next →
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public EventCallback OnBack { get; set; }
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    [Parameter] public bool BackDisabled { get; set; } = false;
    [Parameter] public bool NextDisabled { get; set; } = false;
    [Parameter] public bool SaveDisabled { get; set; } = false;
    [Parameter] public bool ShowSave { get; set; } = false;
    [Parameter] public bool HideNext { get; set; } = false;
}

<style>
    /* Footer */
    .wizard-footer {
        background: #F6F6F6;
        border-top: 1px solid #E0E0E0;
        padding: 25px 80px;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 100;
        box-shadow: 0 -4px 6px -4px rgba(0, 0, 0, 0.1);
    }

    .button-group {
        display: flex;
        gap: 16px;
        justify-content: flex-end;
    }

    /* Buttons */
    .back-button,
    .next-button {
        width: 190px;
        height: 50px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-weight: 400;
        font-size: 16px;
        line-height: 19px;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: none;
    }

    .back-button {
        border: 1px solid #9E9E9E;
        color: #4A4A4A;
        background: #FFFFFF;
    }

        .back-button:hover:not(:disabled) {
            background: #F5F5F5;
            border-color: #4A4A4A;
        }

    .next-button {
        background: #FF931E;
        color: #000000;
        border: none;
    }

        .next-button:hover:not(:disabled) {
            background: #E58520;
        }

        .next-button:disabled {
            background: #E0E0E0;
            color: #9E9E9E;
            cursor: not-allowed;
        }

    .back-button:disabled {
        border: 1px solid #E0E0E0;
        color: #9E9E9E;
        background: #F5F5F5;
        cursor: not-allowed;
    }

    /* Secondary Next button (shown alongside Save) */
    .secondary-next {
        background: #FFFFFF;
        color: #4A4A4A;
        border: 1px solid #FF931E !important;
    }

    .secondary-next:hover:not(:disabled) {
        background: #FFF8F0;
        border-color: #E58520 !important;
    }

    .secondary-next:disabled {
        background: #F5F5F5;
        color: #9E9E9E;
        border: 1px solid #E0E0E0 !important;
        cursor: not-allowed;
    }

    /* Save button styling */
    .save-button {
        background: #FF931E;
        color: #000000;
    }

    /* Mobile responsive styles */
    @@media (max-width: 768px) {
        .wizard-footer {
            padding: 16px 24px;
        }

        .back-button,
        .next-button {
            width: 140px;
            height: 44px;
            font-size: 14px;
        }

        .button-group {
            gap: 12px;
        }
    }

    @@media (max-width: 480px) {
        .wizard-footer {
            padding: 12px 16px;
        }

        .back-button,
        .next-button {
            width: 120px;
            height: 40px;
            font-size: 13px;
            flex: 1;
        }

        .button-group {
            gap: 8px;
            justify-content: space-between;
        }
    }
</style>