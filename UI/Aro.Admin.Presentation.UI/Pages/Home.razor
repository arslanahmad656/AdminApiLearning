@page "/"
@attribute [Authorize]
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>ARO Admin - Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="home-main-content">
            <!-- Top Right Icons -->
            <div class="top-right-section">
                <div class="top-right-profile">
                    <img class="profile-img" Src="icons/profile.png" />
                    <span class="property-name">Brøchner hotels</span>
                    <img src="icons/dropdown.png" alt="Dropdown" class="dropdown-icon" />
                </div>

                <div class="top-right-icons" @onclick="HandleSearch">
                    <img src="icons/searchicon.png" alt="Search" />
                </div>

                <div class="top-right-icons" @onclick="HandleSettings">
                    <img src="icons/settings.png" alt="Settings" />
                </div>
            </div>

            <!-- If no properties -->
            @if (!Properties.Any())
            {
                <div class="content-card">
                    <div class="content-row">
                        <div class="greeting-section">
                            <h1>Hi @GetFirstName(context.User.Identity?.Name)!</h1>
                            <p>You don't have any properties added yet.</p>
                        </div>

                        <div class="button-section">
                            <button class="aro-button-primary" @onclick="HandleAddGroup">
                                Add Property +
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Property List View - Figma Design -->
                <div class="properties-section">
                    <!-- Header Row -->
                    <div class="properties-header">
                        <h1 class="properties-title">Properties</h1>
                        <div class="properties-controls">
                            <div class="sort-filter-group">
                                <MudIcon Icon="@Icons.Material.Outlined.FilterAlt" Size="Size.Small" Class="filter-icon" />
                                <span class="sort-text">Sort by: <strong>A-Z</strong></span>
                            </div>
                            <button class="aro-button-primary" @onclick="HandleAddGroup">
                                Add Property +
                            </button>
                        </div>
                    </div>

                    <!-- Property Cards -->
                    @foreach (var property in Properties)
                    {
                        <div class="property-card">
                            <!-- Top Row: Logo, Name, Globe Icon, Status -->
                            <div class="property-top-row">
                                <div class="property-identity">
                                    <img src="@property.Favicon" alt="@property.Name" class="property-logo" />
                                    <span class="property-name">@property.Name</span>
                                    <svg class="globe-icon" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2s.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2s.07-1.35.16-2h4.68c.09.65.16 1.32.16 2s-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2s-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z"/>
                                    </svg>
                                </div>
                                <div class="status-badge active">Active</div>
                            </div>

                            <!-- Divider -->
                            <div class="property-divider"></div>

                            <!-- Info Row: Address and Contact -->
                            <div class="property-info-row">
                                <div class="property-address">@property.Address</div>
                                <div class="property-contact">
                                    <MudIcon Icon="@Icons.Material.Outlined.Mail" Size="Size.Small" Class="mail-icon" />
                                    <span class="contact-name">@property.OwnerName</span>
                                </div>
                            </div>

                            <!-- Platform Chips -->
                            <div class="platform-chips">
                                @foreach (var platform in property.PublishedTo)
                                {
                                    <div class="platform-chip">@platform</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject] private NavigationManager? NavigationManager { get; set; }

    private List<PropertyModel> Properties = new()
    {
        new()
        {
            Name = "Danmark hotel",
            Favicon = "icons/favicon-icon.png",
            Website = "https://www.brochner-hotels.com/our-locations/hotel-danmark",
            Address = "Vester Voldgade 89, 1552 Copenhagen",
            OwnerName = "John Wavy",
            OwnerEmail = "john.wavy@brochner-hotels.com",
            PublishedTo = new() { "Booking engine", "Aró Analytics" }
        }
    };

    private void HandleAddGroup() => NavigationManager?.NavigateTo("/property/information");
    private void HandleSearch() => NavigationManager?.NavigateTo("/search");
    private void HandleSettings() => NavigationManager?.NavigateTo("/settings");

    private void CopyEmail(string email)
    {
        // Clipboard API can be used via JS interop if needed
        Console.WriteLine($"Copied email: {email}");
    }

    private string GetFirstName(string? fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "Alex";
        if (fullName.Contains("@")) return fullName.Split('@')[0];
        return fullName.Split(' ')[0];
    }

    public class PropertyModel
    {
        public string Name { get; set; } = "";
        public string Favicon { get; set; } = "";
        public string Website { get; set; } = "";
        public string Address { get; set; } = "";
        public string OwnerName { get; set; } = "";
        public string OwnerEmail { get; set; } = "";
        public List<string> PublishedTo { get; set; } = new();
    }
}
<style>
    /* ============================================
       PROPERTIES SECTION - Figma Design
       ============================================ */
    .properties-section {
        padding-top: 80px;
    }

    /* Header Row */
    .properties-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .properties-title {
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        font-size: 36px;
        line-height: 1;
        color: #000000;
        margin: 0;
    }

    .properties-controls {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .sort-filter-group {
        display: flex;
        align-items: center;
        gap: 8px;
        background: #EFEFEF;
        padding: 10px 16px;
        border-radius: 6px;
    }

    .filter-icon {
        color: #000000;
    }

    .sort-text {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        color: #000000;
        letter-spacing: 0.32px;
    }

    .sort-text strong {
        font-weight: 700;
    }

    /* ============================================
       PROPERTY CARD - Figma Design
       ============================================ */
    .property-card {
        background: #FBFBFB;
        border: 1px solid #DFDFDF;
        border-radius: 6px;
        padding: 20px 24px;
        margin-bottom: 16px;
    }

    /* Top Row: Logo, Name, Globe, Status */
    .property-top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .property-identity {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .property-logo {
        width: 36px;
        height: 36px;
        border-radius: 18px;
        object-fit: cover;
    }

    .property-name {
        font-family: 'Inter', sans-serif;
        font-weight: 400;
        font-size: 24px;
        color: #1C1B1F;
    }

    .globe-icon {
        width: 24px;
        height: 24px;
        color: #1C1B1F;
        opacity: 0.7;
        flex-shrink: 0;
    }

    /* Status Badge */
    .status-badge {
        font-family: 'Inter', sans-serif;
        font-size: 12px;
        padding: 6px 16px;
        border-radius: 18px;
    }

    .status-badge.active {
        background: #D8EDD9;
        color: #1B4D19;
    }

    /* Divider */
    .property-divider {
        height: 1px;
        background: #E0E0E0;
        margin: 16px 0;
    }

    /* Info Row: Address and Contact */
    .property-info-row {
        display: flex;
        align-items: center;
        gap: 80px;
        margin-bottom: 16px;
    }

    .property-address {
        font-family: 'Inter', 'Noto Sans', sans-serif;
        font-size: 16px;
        color: #1C1B1F;
    }

    .property-contact {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .mail-icon {
        color: #1C1B1F;
    }

    .contact-name {
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        color: #1C1B1F;
    }

    /* Platform Chips */
    .platform-chips {
        display: flex;
        gap: 16px;
    }

    .platform-chip {
        background: #F5F5F5;
        border-left: 3px solid #F69126;
        padding: 10px 20px;
        border-radius: 6px;
        font-family: 'Inter', sans-serif;
        font-size: 16px;
        color: #1C1B1F;
    }

    /* ============================================
       RESPONSIVE
       ============================================ */
    @@media (max-width: 1200px) {
        .properties-section {
            padding-top: 60px;
        }

        .property-info-row {
            gap: 40px;
        }
    }

    @@media (max-width: 968px) {
        .properties-title {
            font-size: 28px;
        }

        .property-info-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .platform-chips {
            flex-wrap: wrap;
        }
    }

    @@media (max-width: 768px) {
        .properties-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .property-name {
            font-size: 20px;
        }
    }
</style>