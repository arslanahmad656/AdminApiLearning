@page "/property/key-selling-points"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components
@using MudBlazor.Components
@layout WizardLayout
@inject NavigationManager NavigationManager


<div class="property-wizard-container">
    <!-- Header Bar -->
    <div class="wizard-header">
        <h1 class="header-title">Create New Property</h1>
        <div class="close-icon" @onclick="HandleClose">
            <svg width="17" height="17" viewBox="0 0 17 17" fill="none">
                <line x1="1" y1="1" x2="16" y2="16" stroke="white" stroke-width="2"/>
                <line x1="16" y1="1" x2="1" y2="16" stroke="white" stroke-width="2"/>
            </svg>
        </div>
    </div>

    <div class="wizard-body">
        <!-- Left Sidebar with Steps -->
        <div class="wizard-sidebar">
            <div class="wizard-steps">
                <div class="wizard-step completed">
                    <div class="step-indicator">
                        <div class="step-number completed-check">
                            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
                                <path d="M1 5L6 10L15 1" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <div class="step-line completed"></div>
                    </div>
                    <div class="step-title">Property Information</div>
                </div>
                <div class="wizard-step completed">
                    <div class="step-indicator">
                        <div class="step-number completed-check">
                            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
                                <path d="M1 5L6 10L15 1" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                        <div class="step-line completed"></div>
                    </div>
                    <div class="step-title">Address & Primary Contact</div>
                </div>
                <div class="wizard-step active">
                    <div class="step-indicator">
                        <div class="step-number">3</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Key Selling Points</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">4</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Media Files</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">5</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Marketing & SEO</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">6</div>
                    </div>
                    <div class="step-title">Review & Save</div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="wizard-content">
            <div class="content-header">
                <p class="step-label">Step 3</p>
                <h2 class="content-title">Key Selling Points</h2>
            </div>

            <!-- Instructional Text -->
            <p class="instruction-text">
                Write the most compelling reasons a guest should book with you. These highlights will be featured under Book Direct Benefit section in the Booking Engine.  You can reorder by drag & drop. Max 4 items, 30 characters each.
            </p>
            <!-- New MudBlazor Drag-and-Drop -->
    <MudDropContainer T="SellingPointItem"
                      Items="keySellingPoints"
                      ItemsSelector="@((item, zone) => item.Identifier == zone)"
                      ItemDropped="OnItemDropped"
                      Class="d-flex flex-column gap-2">

        <ChildContent>
            <MudDropZone T="SellingPointItem" Identifier="KeySellingPoints">
                @foreach (var item in keySellingPoints)
                {
                    var index = keySellingPoints.IndexOf(item);
                    var remainingChars = 30 - (item.Text?.Length ?? 0);

                    <MudDraggable T="SellingPointItem" Item="item">
                        <div class="selection-row">
                            <div class="selling-point-row">
                                <input type="text"
                                       class="selling-point-input"
                                       maxlength="30"
                                       @bind="keySellingPoints[index].Text"
                                       placeholder="@keySellingPlaceHolder[index]" />

                                <button type="button" class="delete-btn" @onclick="() => Remove(index)">
                                    <img width="18" height="18" src="./icons/delete.png" />
                                </button>
                            </div>

                            <div class="drag-handle">
                                <MudIcon Icon="@Icons.Material.Filled.DragIndicator" />
                            </div>
                        </div>

                        @if (remainingChars == 0)
                        {
                            <div class="char-count zero">0 characters left</div>
                        }
                    </MudDraggable>
                }
            </MudDropZone>
        </ChildContent>
    </MudDropContainer>
            @if (keySellingPoints.Count < 4)
            {
                <button type="button" class="add-point-btn" @onclick="AddSellingPoint">
                    + Add New Point
                </button>
            }


            <!-- Footer with Buttons -->
            <WizardFooter OnBack="HandleBack"
                          OnNext="HandleNext"
                          BackDisabled="false"
                          NextDisabled="false" />
        </div>
    </div>
</div>

@code {
    private string searchQuery = "";
    private bool isOutdoorExpanded = false;
    private List<SellingPointItem> keySellingPoints = new()
    {
        new SellingPointItem { Text = "", Identifier = "KeySellingPoints" },
        new SellingPointItem { Text = "", Identifier = "KeySellingPoints" },
        new SellingPointItem { Text = "", Identifier = "KeySellingPoints" },
        new SellingPointItem { Text = "", Identifier = "KeySellingPoints" }
    };

    private List<string> keySellingPlaceHolder = new()
    {
        "eg. Free Cancellation",
        "eg. Super fast Wi-Fi",
        "eg. No booking deposit",
        "eg. City Centre location"
    };

    private int? dragIndex = null;

    private void StartDrag(int index)
    {
        dragIndex = index;
    }

    private void Drop(int dropIndex)
    {
        if (dragIndex is null || dragIndex == dropIndex)
            return;

        var draggedItem = keySellingPoints[(int)dragIndex];
        keySellingPoints.RemoveAt((int)dragIndex);

        // Adjust for shift in index if dragging down
        if (dropIndex > dragIndex)
            dropIndex--;

        keySellingPoints.Insert(dropIndex, draggedItem);

        dragIndex = null;
    }

    private void AddSellingPoint()
    {
        if (keySellingPoints.Count < 4)
            keySellingPoints.Add(new SellingPointItem { Text = "", Identifier = "KeySellingPoints" });
    }

    private void Remove(int index)
    {
        if (index >= 0 && index < keySellingPoints.Count)
            keySellingPoints.RemoveAt(index);
    }

    private void OnItemDropped(MudItemDropInfo<SellingPointItem> dropInfo)
    {
        if (dropInfo.Item == null) return;

        dropInfo.Item.Identifier = dropInfo.DropzoneIdentifier;

        // Move the item in the list
        keySellingPoints.Remove(dropInfo.Item);
        keySellingPoints.Insert(dropInfo.IndexInZone, dropInfo.Item);
    }

    private List<FacilityModel> indoorFacilities = new()
    {
        new() { Id = "heated-pool", Name = "Heated pool", IsSelected = true },
        new() { Id = "public-bath", Name = "Public bath", IsSelected = false },
        new() { Id = "spa-wellness", Name = "Spa and wellness", IsSelected = false },
        new() { Id = "kitchen", Name = "Kitchen", IsSelected = true },
        new() { Id = "superfast-wifi", Name = "Superfast WiFi", IsSelected = false },
        new() { Id = "fitness-gym", Name = "Fitness centre/ Gym", IsSelected = false },
        new() { Id = "laundry", Name = "Laundry", IsSelected = true },
        new() { Id = "luggage-storage", Name = "Luggage storage", IsSelected = false },
        new() { Id = "bar", Name = "Bar", IsSelected = false },
        new() { Id = "restaurants", Name = "Restaurants", IsSelected = true },
        new() { Id = "event-spaces", Name = "Event spaces", IsSelected = false },
        new() { Id = "elevators", Name = "Elevators", IsSelected = false },
        new() { Id = "wheelchair-ramps", Name = "Wheelchair ramps", IsSelected = true },
        new() { Id = "indoor-parking", Name = "Indoor parking", IsSelected = false },
        new() { Id = "meeting-rooms", Name = "Meeting rooms", IsSelected = false }
    };

    private List<FacilityModel> outdoorFacilities = new()
    {
        new() { Id = "outdoor-pool", Name = "Outdoor pool", IsSelected = false },
        new() { Id = "garden", Name = "Garden", IsSelected = false },
        new() { Id = "terrace", Name = "Terrace", IsSelected = false },
        new() { Id = "bbq", Name = "BBQ facilities", IsSelected = false },
        new() { Id = "outdoor-parking", Name = "Outdoor parking", IsSelected = false },
        new() { Id = "playground", Name = "Playground", IsSelected = false }
    };

    private IEnumerable<FacilityModel> filteredIndoorFacilities =>
        string.IsNullOrWhiteSpace(searchQuery)
            ? indoorFacilities
            : indoorFacilities.Where(f => f.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    private void ToggleOutdoorFacilities()
    {
        isOutdoorExpanded = !isOutdoorExpanded;
    }

    private void HandleClose()
    {
        // Navigate back or show confirmation dialog
    }

    private void HandleBack()
    {
        // Navigate back to Address & Primary Contact page
        NavigationManager.NavigateTo("/property/address-contact");
    }

    private void HandleNext()
    {
        // Navigate to Media Files page (Step 4)
        // TODO: Implement save logic
        NavigationManager.NavigateTo("/property/media-files");
    }

    public class FacilityModel
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public bool IsSelected { get; set; }
    }
    public class SellingPointItem
    {
        public string Text { get; set; } = string.Empty;
        public string Identifier { get; set; } = string.Empty;
    }
}

