@page "/property/media-files"
@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using MudBlazor
@using Aro.UI.Application.DTOs
@using Aro.Admin.Presentation.UI.Shared
@layout WizardLayout
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<div class="property-wizard-container">
    <!-- Header Bar -->
    <div class="col-12 card-bg-dark">
        <WizardHeader HeaderTitle="@Title"
                      OnClose="HandleClose" />
    </div>

    <div class="wizard-body">
        <!-- Left Sidebar with Steps -->
        <div class="d-none d-md-block col-xl-2  border-end bg-white">
            <WizardSteps StepTitles="@stepTitles"
                         ActiveStepIndex="3"
                         IsEditMode="@wizardModel.IsEditMode"
                         OnStepClick="HandleStepClick" />
        </div>

        <!-- Main Content Area -->
        <div class="wizard-content">
            <div class="content-header">
                <p class="step-label">Step 4</p>
                <h2 class="content-title">Upload page banner</h2>
            </div>

            <p class="instruction-text">
                This picture will be displayed at the top of the screen.
            </p>

            <!-- Upload Banner Images Section -->
            <div class="upload-section">
                <div class="upload-grid">
                    @foreach (var image in uploadedImages)
                    {
                        <div class="image-thumbnail">
                            <img src="@image.Url" alt="@image.Name" />
                            <div class="image-overlay">
                                <button type="button" class="delete-button" @onclick="() => RemoveImage(image)" @onclick:stopPropagation="true" title="Remove image">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M3 6H5H21" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    }

                    @if (uploadedImages.Count < maxBannerImages)
                    {
                        <div class="add-image-box" @onclick="TriggerFileUpload">
                            <div class="add-icon">+</div>
                            <div class="add-text">Add</div>
                            <div class="add-text">@($"{maxBannerImages - uploadedImages.Count} Left")</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Hidden file input -->
            <InputFile id="fileInput" OnChange="HandleFileSelected" multiple accept="image/jpeg,image/png,image/svg+xml" style="display: none;" @ref="fileInput" />

            <!-- Upload Favicon Section -->
            <div class="video-section">
                <h3 class="section-title">Upload favicon</h3>
                <p class="section-instruction">
                    It's a small icon that appears in browser tabs on desktops. We recommend using a logo. Max 32px by 32px.
                </p>

                <div class="favicon-upload-container">
                    <div class="favicon-filename-display">
                        @if (!string.IsNullOrEmpty(faviconUrl))
                        {
                            <img src="@faviconUrl" alt="Favicon preview" class="favicon-icon favicon-preview" />
                        }
                        else
                        {
                            <img src="/icons/favicon-icon.png" alt="Favicon icon" class="favicon-icon" />
                        }
                        <span>@(string.IsNullOrEmpty(faviconFileName) ? "No file chosen" : faviconFileName)</span>
                    </div>
                    <label class="favicon-browse-button">
                        Browse Files
                        <InputFile OnChange="HandleFaviconSelected" accept="image/png" style="display: none;" />
                    </label>
                    @if (!string.IsNullOrEmpty(faviconFileName))
                    {
                        <button type="button" class="favicon-remove-button" @onclick="RemoveFavicon" title="Remove favicon">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    }
                </div>
            </div>

            <!-- Footer Buttons -->
            <WizardFooter OnBack="HandleBack"
                          OnNext="HandleNext"
                          OnSave="HandleSave"
                          BackDisabled="false"
                          NextDisabled="@(!IsFormValid())"
                          ShowSave="@wizardModel.IsEditMode" />
        </div>
    </div>
</div>

@code {
    private const int maxBannerImages = 2;
    private const long MaxFileSize = 5 * 1024 * 1024; // 5MB
    private const long MaxFaviconSize = 50 * 1024; // 50KB

    private PropertyWizardModel wizardModel = new();
    private List<ImageModel> uploadedImages = new();
    private string? faviconFileName = string.Empty;
    private string? faviconUrl = null;
    private bool isFaviconExisting = false;
    private InputFile? fileInput;
    private Guid? _currentGroupId = null;
    private Guid? _currentPropertyId = null;
    private string _originalStateHash = string.Empty;
    private string Title => $"{(wizardModel.IsEditMode ? "Edit" : "Add New")} Property";

    private readonly List<string> stepTitles = new()
    {
        "Property Information",
        "Address & Primary Contact",
        "Key Selling Points",
        "Media Files",
        "Marketing & SEO",
        "Review & Save"
    };

    private readonly string[] stepRoutes = new[]
    {
        "/property/information",
        "/property/address-contact",
        "/property/key-selling-points",
        "/property/media-files",
        "/property/marketing-seo",
        "/property/review-save"
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadFromLocalStorage();
            StateHasChanged();
        }
    }

    private string GetStorageKey() => PropertyWizardModel.GetLocalStorageKey(_currentGroupId, _currentPropertyId);

    private string ComputeCurrentStateHash()
    {
        var images = string.Join("|", uploadedImages.Select(i => i.Id + i.Name));
        return $"{images}|{faviconFileName}";
    }

    private bool HasUnsavedChanges() => _originalStateHash != ComputeCurrentStateHash();

    private bool HasWizardProgress()
    {
        return !string.IsNullOrWhiteSpace(wizardModel.PropertyName) ||
               !string.IsNullOrWhiteSpace(wizardModel.AddressLine1) ||
               uploadedImages?.Any() == true;
    }

    private async Task LoadFromLocalStorage()
    {
        try
        {
            // Get GroupId from localStorage
            var groupIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "SelectedGroupId");
            if (!string.IsNullOrEmpty(groupIdStr) && Guid.TryParse(groupIdStr, out var parsedGroupId))
            {
                _currentGroupId = parsedGroupId;
            }

            // Get PropertyId from localStorage (for edit mode)
            var propertyIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "CurrentPropertyId");
            if (!string.IsNullOrEmpty(propertyIdStr) && Guid.TryParse(propertyIdStr, out var parsedPropertyId))
            {
                _currentPropertyId = parsedPropertyId;
            }

            // Load the wizard data with the correct storage key (create vs edit)
            var storageKey = GetStorageKey();
            var json = await JSRuntime.InvokeAsync<string>("localStorage.getItem", storageKey);
            if (!string.IsNullOrEmpty(json))
            {
                var savedModel = JsonSerializer.Deserialize<PropertyWizardModel>(json);
                if (savedModel != null)
                {
                    wizardModel = savedModel;

                    // Sync _currentGroupId from wizardModel if still not set
                    if (!_currentGroupId.HasValue && wizardModel.GroupId.HasValue && wizardModel.GroupId.Value != Guid.Empty)
                    {
                        _currentGroupId = wizardModel.GroupId;
                        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", _currentGroupId.Value.ToString());
                    }

                    // Sync _currentPropertyId from wizardModel if in edit mode
                    if (!_currentPropertyId.HasValue && wizardModel.PropertyId.HasValue && wizardModel.PropertyId.Value != Guid.Empty)
                    {
                        _currentPropertyId = wizardModel.PropertyId;
                        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "CurrentPropertyId", _currentPropertyId.Value.ToString());
                    }

                    // Restore uploaded images from wizardModel (handles both Base64 and URL)
                    uploadedImages.Clear();
                    if (wizardModel.Banner1 != null && wizardModel.Banner1.HasData)
                    {
                        uploadedImages.Add(new ImageModel
                        {
                            Id = "banner1",
                            Name = wizardModel.Banner1.FileName,
                            Url = wizardModel.Banner1.GetDisplayUrl(),
                            IsExisting = !wizardModel.Banner1.IsNewUpload
                        });
                    }
                    if (wizardModel.Banner2 != null && wizardModel.Banner2.HasData)
                    {
                        uploadedImages.Add(new ImageModel
                        {
                            Id = "banner2",
                            Name = wizardModel.Banner2.FileName,
                            Url = wizardModel.Banner2.GetDisplayUrl(),
                            IsExisting = !wizardModel.Banner2.IsNewUpload
                        });
                    }
                    if (wizardModel.Favicon != null && wizardModel.Favicon.HasData)
                    {
                        faviconFileName = wizardModel.Favicon.FileName;
                        faviconUrl = wizardModel.Favicon.GetDisplayUrl();
                        isFaviconExisting = !wizardModel.Favicon.IsNewUpload;
                    }
                }
            }

            // Ensure wizardModel.GroupId is set
            if (_currentGroupId.HasValue && _currentGroupId.Value != Guid.Empty)
            {
                wizardModel.GroupId = _currentGroupId;
            }

            _originalStateHash = ComputeCurrentStateHash();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading from localStorage: {ex.Message}");
        }
    }

    private async Task SaveToLocalStorage(bool updateHash = false)
    {
        try
        {
            if (_currentGroupId.HasValue && _currentGroupId.Value != Guid.Empty)
            {
                wizardModel.GroupId = _currentGroupId;
            }

            if (wizardModel.GroupId.HasValue && wizardModel.GroupId.Value != Guid.Empty)
            {
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", wizardModel.GroupId.Value.ToString());
                _currentGroupId = wizardModel.GroupId;
            }

            var banner1Image = uploadedImages.FirstOrDefault(i => i.Id == "banner1");
            var banner2Image = uploadedImages.FirstOrDefault(i => i.Id == "banner2");
            var newImages = uploadedImages.Where(i => i.Id != "banner1" && i.Id != "banner2").ToList();

            if (banner1Image != null)
            {
                if (banner1Image.IsExisting)
                {
                    wizardModel.Banner1 = new PropertyFileModel
                    {
                        FileName = banner1Image.Name,
                        Url = banner1Image.Url,
                        FileId = wizardModel.ExistingBanner1Id
                    };
                }
                else
                {
                    wizardModel.Banner1 = new PropertyFileModel
                    {
                        FileName = banner1Image.Name,
                        ContentType = GetContentTypeFromDataUrl(banner1Image.Url),
                        Base64Data = banner1Image.Url
                    };
                }
            }
            else if (newImages.Count > 0)
            {
                var img = newImages[0];
                wizardModel.Banner1 = new PropertyFileModel
                {
                    FileName = img.Name,
                    ContentType = GetContentTypeFromDataUrl(img.Url),
                    Base64Data = img.Url
                };
                newImages.RemoveAt(0);
            }
            else
            {
                wizardModel.Banner1 = null;
            }

            if (banner2Image != null)
            {
                if (banner2Image.IsExisting)
                {
                    wizardModel.Banner2 = new PropertyFileModel
                    {
                        FileName = banner2Image.Name,
                        Url = banner2Image.Url,
                        FileId = wizardModel.ExistingBanner2Id
                    };
                }
                else
                {
                    wizardModel.Banner2 = new PropertyFileModel
                    {
                        FileName = banner2Image.Name,
                        ContentType = GetContentTypeFromDataUrl(banner2Image.Url),
                        Base64Data = banner2Image.Url
                    };
                }
            }
            else if (newImages.Count > 0)
            {
                var img = newImages[0];
                wizardModel.Banner2 = new PropertyFileModel
                {
                    FileName = img.Name,
                    ContentType = GetContentTypeFromDataUrl(img.Url),
                    Base64Data = img.Url
                };
            }
            else
            {
                wizardModel.Banner2 = null;
            }

            wizardModel.CurrentStep = 4;
            var storageKey = GetStorageKey();
            var json = JsonSerializer.Serialize(wizardModel);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", storageKey, json);

            if (updateHash)
            {
                _originalStateHash = ComputeCurrentStateHash();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving to localStorage: {ex.Message}");
        }
    }

    private string GetContentTypeFromDataUrl(string dataUrl)
    {
        if (string.IsNullOrEmpty(dataUrl) || !dataUrl.StartsWith("data:"))
            return "image/jpeg";
        var endIndex = dataUrl.IndexOf(";");
        if (endIndex > 5)
            return dataUrl.Substring(5, endIndex - 5);
        return "image/jpeg";
    }

    private async Task TriggerFileUpload()
    {
        await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('fileInput').click()");
    }

    private static readonly string[] AllowedImageTypes = { "image/jpeg", "image/png", "image/svg+xml" };

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var files = e.GetMultipleFiles(maxBannerImages - uploadedImages.Count);

        foreach (var file in files)
        {
            // Validate file type
            if (!AllowedImageTypes.Contains(file.ContentType))
            {
                Snackbar.Add($"Invalid file type: {file.Name}. Only JPG, PNG, and SVG files are allowed.", MudBlazor.Severity.Error);
                continue;
            }

            // Validate file size
            if (file.Size > MaxFileSize)
            {
                Snackbar.Add($"File too large: {file.Name}. Maximum size is 5MB.", MudBlazor.Severity.Error);
                continue;
            }

            try
            {
                var buffer = new byte[file.Size];
                await file.OpenReadStream(MaxFileSize).ReadAsync(buffer);
                var imageDataUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";

                var newImage = new ImageModel
                {
                    Id = Guid.NewGuid().ToString(),
                    Name = Path.GetFileNameWithoutExtension(file.Name),
                    Url = imageDataUrl
                };

                uploadedImages.Add(newImage);
                Snackbar.Add($"Image '{file.Name}' uploaded successfully.", MudBlazor.Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to upload {file.Name}: {ex.Message}", MudBlazor.Severity.Error);
            }
        }

        await SaveToLocalStorage();
        StateHasChanged();
    }

    private static readonly string[] AllowedFaviconTypes = { "image/png", "image/x-icon", "image/vnd.microsoft.icon" };

    private async Task HandleFaviconSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file is null) return;

        // Validate file type (PNG or ICO)
        if (!AllowedFaviconTypes.Contains(file.ContentType))
        {
            Snackbar.Add($"Invalid favicon type: {file.Name}. Only PNG files are recommended for favicons.", MudBlazor.Severity.Error);
            return;
        }

        // Validate file size
        if (file.Size > MaxFaviconSize)
        {
            Snackbar.Add($"Favicon too large: {file.Name}. Maximum size is 50KB.", MudBlazor.Severity.Error);
            return;
        }

        try
        {
            var buffer = new byte[file.Size];
            await file.OpenReadStream(MaxFaviconSize).ReadAsync(buffer);
            var imageDataUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";

            wizardModel.Favicon = new PropertyFileModel
            {
                FileName = file.Name,
                ContentType = file.ContentType,
                Base64Data = imageDataUrl
            };
            faviconFileName = file.Name;
            faviconUrl = imageDataUrl;
            Snackbar.Add($"Favicon '{file.Name}' uploaded successfully.", MudBlazor.Severity.Success);
            await SaveToLocalStorage();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to upload favicon: {ex.Message}", MudBlazor.Severity.Error);
        }
    }

    private async Task RemoveImage(ImageModel image)
    {
        if (image.IsExisting)
        {
            if (image.Id == "banner1" && wizardModel.ExistingBanner1Id.HasValue)
            {
                wizardModel.DeletedFileIds.Add(wizardModel.ExistingBanner1Id.Value);
                wizardModel.ExistingBanner1Id = null;
            }
            else if (image.Id == "banner2" && wizardModel.ExistingBanner2Id.HasValue)
            {
                wizardModel.DeletedFileIds.Add(wizardModel.ExistingBanner2Id.Value);
                wizardModel.ExistingBanner2Id = null;
            }
        }
        uploadedImages.Remove(image);
        await SaveToLocalStorage();
        StateHasChanged();
    }

    private async Task RemoveFavicon()
    {
        if (isFaviconExisting && wizardModel.ExistingFaviconId.HasValue)
        {
            wizardModel.DeletedFileIds.Add(wizardModel.ExistingFaviconId.Value);
            wizardModel.ExistingFaviconId = null;
        }
        wizardModel.Favicon = null;
        faviconFileName = string.Empty;
        faviconUrl = null;
        isFaviconExisting = false;
        await SaveToLocalStorage();
        StateHasChanged();
    }

    // Validation - requires at least one banner image
    private bool IsFormValid()
    {
        return uploadedImages.Count > 0;
    }

    private bool ValidateAndShowErrors()
    {
        if (uploadedImages.Count == 0)
        {
            Snackbar.Add("Please upload at least one banner image to proceed.", MudBlazor.Severity.Warning);
            return false;
        }
        return true;
    }
    private async Task HandleClose()
    {
        bool hasChangesOrProgress = HasUnsavedChanges() || HasWizardProgress();

        if (!hasChangesOrProgress)
        {
            await CloseAndNavigate();
            return;
        }

        // Show Unsaved Changes modal
        var parameters = new DialogParameters
        {
            { "ShowSaveAndContinue", false }
        };

        var options = new DialogOptions
        {
            CloseButton = false,
            MaxWidth = MaxWidth.Small,
        };

        var dialog = await DialogService.ShowAsync<UnsavedChangesModal>(
            "Unsaved Changes",
            parameters,
            options
        );

        var result = await dialog.Result;

        if (result == null || result.Canceled)
            return;

        var action = (UnsavedChangesModal.UnsavedChangesResult)result.Data!;

        switch (action)
        {
            case UnsavedChangesModal.UnsavedChangesResult.Discard:
                await CloseAndNavigate();
                break;

            case UnsavedChangesModal.UnsavedChangesResult.Cancel:
                // Do nothing
                break;
        }
    }

    private async Task CloseAndNavigate()
    {
        var groupIdString = await JSRuntime.InvokeAsync<string>(
            "localStorage.getItem",
            "SelectedGroupId"
        );

        if (string.IsNullOrWhiteSpace(groupIdString) ||
            !Guid.TryParse(groupIdString, out var groupId))
        {
            return;
        }

        var storageKey = GetStorageKey();
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", storageKey);
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "CurrentPropertyId");

        NavigationManager.NavigateTo($"/group/view/{groupId}");
    }
    private async Task HandleBack()
    {
        await SaveToLocalStorage(true);
        NavigationManager.NavigateTo("/property/key-selling-points");
    }

    private async Task HandleNext()
    {
        if (!ValidateAndShowErrors())
            return;

        await SaveToLocalStorage(true);
        NavigationManager.NavigateTo("/property/marketing-seo");
    }

    private async Task HandleSave()
    {
        await SaveToLocalStorage(true);
        NavigationManager.NavigateTo("/property/review-save");
    }

    private async Task HandleStepClick(int stepIndex)
    {
        if (!wizardModel.IsEditMode) return;

        if (!HasUnsavedChanges())
        {
            NavigationManager.NavigateTo(stepRoutes[stepIndex]);
            return;
        }

        var parameters = new DialogParameters();
        var options = new DialogOptions { CloseButton = false, MaxWidth = MaxWidth.Small };
        var dialog = await DialogService.ShowAsync<UnsavedChangesModal>("Unsaved Changes", parameters, options);
        var result = await dialog.Result;

        if (result == null || result.Canceled) return;

        var action = (UnsavedChangesModal.UnsavedChangesResult)result.Data!;
        switch (action)
        {
            case UnsavedChangesModal.UnsavedChangesResult.SaveAndContinue:
                await SaveToLocalStorage(true);
                NavigationManager.NavigateTo(stepRoutes[stepIndex]);
                break;
            case UnsavedChangesModal.UnsavedChangesResult.Discard:
                NavigationManager.NavigateTo(stepRoutes[stepIndex]);
                break;
            case UnsavedChangesModal.UnsavedChangesResult.Cancel:
                break;
        }
    }

    public class ImageModel
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string Url { get; set; } = string.Empty;
        public bool IsExisting { get; set; } = false;
    }
}

