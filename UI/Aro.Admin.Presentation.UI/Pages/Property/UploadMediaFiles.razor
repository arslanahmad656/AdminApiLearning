@inject IJSRuntime JSRuntime

<div class="property-wizard-container">
    <!-- Header Bar -->
    <div class="wizard-header">
        <h1 class="header-title">Create New Property</h1>
        <div class="close-icon" @onclick="HandleClose">
            <svg width="17" height="17" viewBox="0 0 17 17" fill="none">
                <line x1="1" y1="1" x2="16" y2="16" stroke="white" stroke-width="2" />
                <line x1="16" y1="1" x2="1" y2="16" stroke="white" stroke-width="2" />
            </svg>
        </div>
    </div>

    <div class="wizard-body">
        <!-- Left Sidebar with Steps -->
        <div class="wizard-sidebar">
            <div class="wizard-steps">
                <div class="wizard-step completed">
                    <div class="step-indicator">
                        <div class="step-number completed-check">
                            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
                                <path d="M1 5L6 10L15 1" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div class="step-line completed"></div>
                    </div>
                    <div class="step-title">Property Information</div>
                </div>
                <div class="wizard-step completed">
                    <div class="step-indicator">
                        <div class="step-number completed-check">
                            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
                                <path d="M1 5L6 10L15 1" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div class="step-line completed"></div>
                    </div>
                    <div class="step-title">Address & Primary Contact</div>
                </div>
                <div class="wizard-step completed">
                    <div class="step-indicator">
                        <div class="step-number completed-check">
                            <svg width="16" height="12" viewBox="0 0 16 12" fill="none">
                                <path d="M1 5L6 10L15 1" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div class="step-line completed"></div>
                    </div>
                    <div class="step-title">Key Selling Points</div>
                </div>
                <div class="wizard-step active">
                    <div class="step-indicator">
                        <div class="step-number">4</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Media Files</div>
                </div>

                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">5</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Marketing & SEO</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">6</div>
                    </div>
                    <div class="step-title">Review & Save</div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="wizard-content">
            <div class="content-header">
                <p class="step-label">Step 4</p>
                <h2 class="content-title">Upload page banner</h2>
            </div>

            <p class="instruction-text">
                This picture will be displayed at the top of the screen.
            </p>

            <!-- Upload Banner Images Section -->
            <div class="upload-section">
                <div class="upload-grid">
                    @foreach (var image in uploadedImages)
                    {
                        <div class="image-thumbnail" @onclick="() => SelectImage(image)">
                            <img src="@image.Url" alt="@image.Name" />
                            @* <div class="image-label">@image.Name</div> *@
                        </div>
                    }

                    @if (uploadedImages.Count < maxBannerImages)
                    {
                        <div class="add-image-box" @onclick="TriggerFileUpload">
                            <div class="add-icon">+</div>
                            <div class="add-text">Add</div>
                            <div class="add-text">@($"{maxBannerImages - uploadedImages.Count} Left")</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Hidden file input -->
            <InputFile id="fileInput" OnChange="HandleFileSelected" multiple accept="image/jpeg,image/png,image/svg+xml" style="display: none;" @ref="fileInput" />

            <!-- Upload Favicon Section -->
            <div class="video-section">
                <h3 class="section-title">Upload favicon</h3>
                <p class="section-instruction">
                    It's a small icon that appears in browser tabs on desktops. We recommend using a logo. Max 32px by 32px.
                </p>

                <div class="favicon-upload-container">
                    <div class="favicon-filename-display">
                        <img src="/icons/favicon-icon.png" alt="Favicon icon" class="favicon-icon" />
                        <span>@(string.IsNullOrEmpty(faviconFileName) ? "No file chosen" : faviconFileName)</span>
                    </div>
                    <label class="favicon-browse-button">
                        Browse Files
                        <InputFile OnChange="HandleFaviconSelected" accept="image/png" style="display: none;" />
                    </label>
                </div>
            </div>

            <!-- Footer Buttons -->
            <WizardFooter OnBack="HandleBack"
                          OnNext="HandleNext"
                          BackDisabled="false"
                          NextDisabled="false" />
        </div>
    </div>
</div>

@code {
    private const int maxBannerImages = 2;
    private const long MaxFileSize = 5 * 1024 * 1024; // 5MB
    private const long MaxFaviconSize = 50 * 1024; // 50KB


    private List<ImageModel> uploadedImages = new();
    private string? faviconFileName = string.Empty;
    private InputFile? fileInput;


    private async Task TriggerFileUpload()
    {
        await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('fileInput').click()");
    }


    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var files = e.GetMultipleFiles(maxBannerImages - uploadedImages.Count);

        foreach (var file in files)
        {
            if (!file.ContentType.StartsWith("image/") || file.Size > MaxFileSize)
                continue;

            var buffer = new byte[file.Size];
            await file.OpenReadStream(MaxFileSize).ReadAsync(buffer);
            var imageDataUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";

            var newImage = new ImageModel
            {
                Id = Guid.NewGuid().ToString(),
                Name = Path.GetFileNameWithoutExtension(file.Name),
                Url = imageDataUrl
            };

            uploadedImages.Add(newImage);
        }

        StateHasChanged();
    }

    private async Task HandleFaviconSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file is not null || file.ContentType != "image/png")
        {
            faviconFileName = file.Name;
            StateHasChanged();
        }
        // Process or store favicon file if needed
    }

    private void SelectImage(ImageModel image)
    {
        // Implement rename functionality or other logic
    }



    private async Task HandleClose()
    {
        // Navigate back or show confirmation dialog
        NavigationManager.NavigateTo("/");
    }

    private void HandleBack()
    {
        // Navigate back to Facilities & Services page
        NavigationManager.NavigateTo("/property/key-selling-points");
    }

    private void HandleNext()
    {
        // Navigate to Property Rules page (Step 5)
        // TODO: Implement save logic
         NavigationManager.NavigateTo("/property/marketing-seo");
    }

    public class ImageModel
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string Url { get; set; } = string.Empty;
    }
}

