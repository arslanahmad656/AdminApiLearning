@page "/property/information"
@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@using Microsoft.AspNetCore.Components
@using Microsoft.JSInterop
@using MudBlazor
@using Aro.UI.Application.DTOs
@using Aro.Admin.Presentation.UI.Shared
@layout WizardLayout
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IPropertyService PropertyService
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<div class="property-wizard-container">
    <!-- Header Bar -->
    <div class="col-12 card-bg-dark">
        <WizardHeader HeaderTitle="@Title"
                      OnClose="HandleClose" />
    </div>

    <div class="wizard-body">
        <!-- Left Sidebar with Steps -->
        <div class="d-none d-md-block col-xl-2  border-end bg-white">
            <WizardSteps StepTitles="@stepTitles"
                         ActiveStepIndex="0"
                         IsEditMode="@wizardModel.IsEditMode"
                         OnStepClick="HandleStepClick" />
        </div>

        <!-- Main Content Area -->
        <div class="wizard-content">
            <div class="content-header">
                <p class="step-label">Step 1</p>
                <h2 class="content-title">Property Information</h2>
            </div>

            <MudForm @ref="form" Class="property-form">
                <!-- Property Name -->
                <div class="form-group">
                    <label class="form-label">Property Name *</label>
                    @if (isPropertyNameFocused)
                    {
                        <p class="char-count @(GetPropertyNameRemainingChars() == 0 ? "zero" : "")">@GetPropertyNameRemainingChars() characters left</p>
                    }
                    <MudTextField @bind-Value="wizardModel.PropertyName"
                                  Variant="Variant.Outlined"
                                  Class="form-input"
                                  Required="true"
                                  MaxLength="100"
                                  Immediate="true"
                                  Placeholder="Enter property name"
                                  DisableUnderLine="true"
                                  @onfocus="() => isPropertyNameFocused = true"
                                  @onblur="OnPropertyNameBlur" />
                </div>

                <!-- Property Type -->
                <div class="form-group">
                    <label class="form-label">Property Type *</label>
                    <div class="property-types-container">
                        <!-- Alphabetical order: Apartment, B&B, Guesthouse, Hostel, Hotel, Lodge, Resort -->
                        <div class="checkbox-item">
                            <input type="checkbox" id="apartment" @bind="wizardModel.PropertyTypes.Apartment" />
                            <label for="apartment" class="property-type-label">Apartment</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="bnb" @bind="wizardModel.PropertyTypes.BnB" />
                            <label for="bnb" class="property-type-label">B&B</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="guesthouse" @bind="wizardModel.PropertyTypes.Guesthouse" />
                            <label for="guesthouse" class="property-type-label">Guesthouse</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="hostel" @bind="wizardModel.PropertyTypes.Hostel" />
                            <label for="hostel" class="property-type-label">Hostel</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="hotel" @bind="wizardModel.PropertyTypes.Hotel" />
                            <label for="hotel" class="property-type-label">Hotel</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="lodge" @bind="wizardModel.PropertyTypes.Lodge" />
                            <label for="lodge" class="property-type-label">Lodge</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="resort" @bind="wizardModel.PropertyTypes.Resort" />
                            <label for="resort" class="property-type-label">Resort</label>
                        </div>
                    </div>
                </div>

                <!-- Star Rating and Currency Row -->
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Star Rating *</label>
                        <select class="form-select-custom" @bind="wizardModel.StarRating" required>
                            <option value="0">Select rating</option>
                            <option value="1">1 star</option>
                            <option value="2">2 star</option>
                            <option value="3">3 star</option>
                            <option value="4">4 star</option>
                            <option value="5">5 star</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Currency *</label>
                        <select class="form-select-custom" @bind="wizardModel.Currency" required>
                            <option value="">Select currency</option>
                            @foreach (var currency in CurrencyData.AllCurrencies)
                            {
                                <option value="@currency.Code">@currency.DisplayName</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label class="form-label">Description *</label>
                    @if (isDescriptionFocused)
                    {
                        <p class="char-count @(GetDescriptionRemainingChars() == 0 ? "zero" : "")">@GetDescriptionRemainingChars() characters left</p>
                    }
                    <textarea class="form-textarea-native"
                              @bind="wizardModel.Description"
                              @bind:event="oninput"
                              @onfocus="() => isDescriptionFocused = true"
                              @onblur="OnDescriptionBlur"
                              rows="5"
                              maxlength="@MaxDescriptionLength"
                              placeholder="Enter property description"
                              required></textarea>
                </div>
            </MudForm>

            <!-- Footer with Buttons -->
            <WizardFooter OnBack="HandleBack"
                          OnNext="HandleNext"
                          OnSave="HandleSave"
                          BackDisabled="true"
                          NextDisabled="@(!IsFormValid())"
                          ShowSave="@wizardModel.IsEditMode" />
        </div>
    </div>
</div>

@code {
    private MudForm? form;
    private PropertyWizardModel wizardModel = new();
    private bool isSubmitting = false;
    private const int MaxPropertyNameLength = 100;
    private const int MaxDescriptionLength = 500;
    private bool isPropertyNameFocused = false;
    private bool isDescriptionFocused = false;
    private Guid? _currentGroupId = null;
    private Guid? _currentPropertyId = null;
    private string _originalStateHash = string.Empty;
    private string Title => $"{(wizardModel.IsEditMode ? "Edit" : "Add New")} Property";

    private readonly List<string> stepTitles = new()
    {
        "Property Information",
        "Address & Primary Contact",
        "Key Selling Points",
        "Media Files",
        "Marketing & SEO",
        "Review & Save"
    };

    private readonly string[] stepRoutes = new[]
    {
        "/property/information",
        "/property/address-contact",
        "/property/key-selling-points",
        "/property/media-files",
        "/property/marketing-seo",
        "/property/review-save"
    };

    [Parameter]
    [SupplyParameterFromQuery(Name = "groupId")]
    public Guid GroupId { get; set; }

    [Parameter]
    [SupplyParameterFromQuery(Name = "propertyId")]
    public Guid? PropertyId { get; set; }

    [Parameter]
    [SupplyParameterFromQuery(Name = "edit")]
    public bool IsEditMode { get; set; }

    private int GetPropertyNameRemainingChars() => MaxPropertyNameLength - (wizardModel.PropertyName?.Length ?? 0);
    private int GetDescriptionRemainingChars() => MaxDescriptionLength - (wizardModel.Description?.Length ?? 0);

    private void OnPropertyNameBlur()
    {
        isPropertyNameFocused = false;
    }

    private void OnDescriptionBlur()
    {
        isDescriptionFocused = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadFromLocalStorage();
            StateHasChanged();
        }
    }

    private string GetStorageKey() => PropertyWizardModel.GetLocalStorageKey(_currentGroupId, _currentPropertyId);

    private string ComputeCurrentStateHash()
    {
        return $"{wizardModel.PropertyName}|{wizardModel.PropertyTypes.Hotel}|{wizardModel.PropertyTypes.Resort}|{wizardModel.PropertyTypes.Apartment}|{wizardModel.PropertyTypes.Hostel}|{wizardModel.PropertyTypes.BnB}|{wizardModel.PropertyTypes.Guesthouse}|{wizardModel.PropertyTypes.Lodge}|{wizardModel.StarRating}|{wizardModel.Currency}|{wizardModel.Description}";
    }

    private bool HasUnsavedChanges() => _originalStateHash != ComputeCurrentStateHash();

    private bool HasWizardProgress()
    {
        // Check if the wizard has any meaningful data that would be lost
        return !string.IsNullOrWhiteSpace(wizardModel.PropertyName) ||
               wizardModel.PropertyTypes.HasAnySelected() ||
               wizardModel.StarRating > 0 ||
               !string.IsNullOrWhiteSpace(wizardModel.Currency) ||
               !string.IsNullOrWhiteSpace(wizardModel.Description);
    }

    private async Task LoadFromLocalStorage()
    {
        try
        {
            // Get GroupId from localStorage
            var groupIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "SelectedGroupId");
            if (!string.IsNullOrEmpty(groupIdStr) && Guid.TryParse(groupIdStr, out var parsedGroupId))
            {
                _currentGroupId = parsedGroupId;
            }
            else if (GroupId != Guid.Empty)
            {
                _currentGroupId = GroupId;
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", GroupId.ToString());
            }

            // Get PropertyId from localStorage (for edit mode)
            var propertyIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "CurrentPropertyId");
            if (!string.IsNullOrEmpty(propertyIdStr) && Guid.TryParse(propertyIdStr, out var parsedPropertyId))
            {
                _currentPropertyId = parsedPropertyId;
            }
            else if (PropertyId.HasValue && PropertyId.Value != Guid.Empty)
            {
                _currentPropertyId = PropertyId;
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "CurrentPropertyId", PropertyId.Value.ToString());
            }

            // Load the wizard data with the correct storage key (create vs edit)
            var storageKey = GetStorageKey();
            var json = await JSRuntime.InvokeAsync<string>("localStorage.getItem", storageKey);
            if (!string.IsNullOrEmpty(json))
            {
                var savedModel = JsonSerializer.Deserialize<PropertyWizardModel>(json);
                if (savedModel != null)
                {
                    wizardModel = savedModel;

                    // Sync _currentGroupId from wizardModel if still not set
                    if (!_currentGroupId.HasValue && wizardModel.GroupId.HasValue && wizardModel.GroupId.Value != Guid.Empty)
                    {
                        _currentGroupId = wizardModel.GroupId;
                        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", _currentGroupId.Value.ToString());
                    }

                    // Sync _currentPropertyId from wizardModel if in edit mode
                    if (!_currentPropertyId.HasValue && wizardModel.PropertyId.HasValue && wizardModel.PropertyId.Value != Guid.Empty)
                    {
                        _currentPropertyId = wizardModel.PropertyId;
                        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "CurrentPropertyId", _currentPropertyId.Value.ToString());
                    }
                }
            }

            // Ensure wizardModel.GroupId is set
            if (_currentGroupId.HasValue && _currentGroupId.Value != Guid.Empty)
            {
                wizardModel.GroupId = _currentGroupId;
            }

            _originalStateHash = ComputeCurrentStateHash();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading from localStorage: {ex.Message}");
        }
    }

    private async Task SaveToLocalStorage()
    {
        try
        {
            // Ensure GroupId is preserved
            if (_currentGroupId.HasValue && _currentGroupId.Value != Guid.Empty)
            {
                wizardModel.GroupId = _currentGroupId;
            }

            // Always ensure SelectedGroupId is saved for subsequent pages
            if (wizardModel.GroupId.HasValue && wizardModel.GroupId.Value != Guid.Empty)
            {
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", wizardModel.GroupId.Value.ToString());
                _currentGroupId = wizardModel.GroupId;
            }

            wizardModel.CurrentStep = 1;
            var storageKey = GetStorageKey();
            var json = JsonSerializer.Serialize(wizardModel);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", storageKey, json);
            _originalStateHash = ComputeCurrentStateHash();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving to localStorage: {ex.Message}");
        }
    }

    private bool IsFormValid()
    {
        return !string.IsNullOrWhiteSpace(wizardModel.PropertyName) &&
               wizardModel.PropertyTypes.HasAnySelected() &&
               wizardModel.StarRating > 0 &&
               !string.IsNullOrWhiteSpace(wizardModel.Currency) &&
               !string.IsNullOrWhiteSpace(wizardModel.Description);
    }

    private async Task HandleClose()
    {
        // Check if there are unsaved changes on current step OR wizard has progress that would be lost
        bool hasChangesOrProgress = HasUnsavedChanges() || HasWizardProgress();

        // If no unsaved changes and no wizard progress, close directly
        if (!hasChangesOrProgress)
        {
            await CloseAndNavigate();
            return;
        }

        // Show Unsaved Changes modal
        var parameters = new DialogParameters
{
    { "ShowSaveAndContinue", false } // hide Save & Continue here
};

        var options = new DialogOptions
        {
            CloseButton = false,
            MaxWidth = MaxWidth.Small,
        };

        var dialog = await DialogService.ShowAsync<UnsavedChangesModal>(
            "Unsaved Changes",
            parameters,
            options
        );

        var result = await dialog.Result;

        if (result == null || result.Canceled)
            return;

        var action = (UnsavedChangesModal.UnsavedChangesResult)result.Data!;

        switch (action)
        {
            case UnsavedChangesModal.UnsavedChangesResult.Discard:
                await CloseAndNavigate();
                break;

            case UnsavedChangesModal.UnsavedChangesResult.Cancel:
                // Do nothing
                break;
        }
    }

    private async Task CloseAndNavigate()
    {
        var groupIdString = await JSRuntime.InvokeAsync<string>(
            "localStorage.getItem",
            "SelectedGroupId"
        );

        if (string.IsNullOrWhiteSpace(groupIdString) ||
            !Guid.TryParse(groupIdString, out var groupId))
        {
            return;
        }

        var storageKey = GetStorageKey();
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", storageKey);
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "CurrentPropertyId");

        NavigationManager.NavigateTo($"/group/view/{groupId}");
    }

    private void HandleBack()
    {
        // Don't save on back from first step - user is canceling
        NavigationManager.NavigateTo("/");
    }

    private async Task HandleNext()
    {
        if (isSubmitting) return;
        if (!IsFormValid()) return;

        await SaveToLocalStorage();
        NavigationManager.NavigateTo("/property/address-contact");
    }

    private async Task HandleSave()
    {
        if (isSubmitting) return;
        if (!IsFormValid()) return;

        await SaveToLocalStorage();
        // In edit mode, "Save" navigates to Review & Save step
        NavigationManager.NavigateTo("/property/review-save");
    }

    private async Task HandleStepClick(int stepIndex)
    {
        if (!wizardModel.IsEditMode) return;

        if (!HasUnsavedChanges())
        {
            NavigationManager.NavigateTo(stepRoutes[stepIndex]);
            return;
        }

        var parameters = new DialogParameters();
        var options = new DialogOptions { CloseButton = false, MaxWidth = MaxWidth.Small };
        var dialog = await DialogService.ShowAsync<UnsavedChangesModal>("Unsaved Changes", parameters, options);
        var result = await dialog.Result;

        if (result == null || result.Canceled) return;

        var action = (UnsavedChangesModal.UnsavedChangesResult)result.Data!;
        switch (action)
        {
            case UnsavedChangesModal.UnsavedChangesResult.SaveAndContinue:
                await SaveToLocalStorage();
                NavigationManager.NavigateTo(stepRoutes[stepIndex]);
                break;
            case UnsavedChangesModal.UnsavedChangesResult.Discard:
                NavigationManager.NavigateTo(stepRoutes[stepIndex]);
                break;
            case UnsavedChangesModal.UnsavedChangesResult.Cancel:
                break;
        }
    }

    // Shorthand property for binding in the form
    private PropertyTypesModel model => wizardModel.PropertyTypes;
}

