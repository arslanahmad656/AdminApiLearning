<div class="property-wizard-container">
    <!-- Header Bar -->
    <div class="wizard-header">
        <h1 class="header-title">Create New Property</h1>
        <div class="close-icon" @onclick="HandleClose">
            <svg width="17" height="17" viewBox="0 0 17 17" fill="none">
                <line x1="1" y1="1" x2="16" y2="16" stroke="white" stroke-width="2" />
                <line x1="16" y1="1" x2="1" y2="16" stroke="white" stroke-width="2" />
            </svg>
        </div>
    </div>

    <div class="wizard-body">
        <!-- Left Sidebar with Steps -->
        <div class="wizard-sidebar">
            <div class="wizard-steps">
                <div class="wizard-step active">
                    <div class="step-indicator">
                        <div class="step-number">1</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Property Information</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">2</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Address & Primary Contact</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">3</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Key Selling Points</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">4</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Media Files</div>
                </div>

                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">5</div>
                        <div class="step-line"></div>
                    </div>
                    <div class="step-title">Marketing & SEO</div>
                </div>
                <div class="wizard-step">
                    <div class="step-indicator">
                        <div class="step-number">6</div>
                    </div>
                    <div class="step-title">Review & Save</div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="wizard-content">
            <div class="content-header">
                <p class="step-label">Step 1</p>
                <h2 class="content-title">Property Information</h2>
            </div>

            <MudForm @ref="form" Class="property-form">
                <!-- Property Name -->
                <div class="form-group">
                    <label class="form-label">Property Name *</label>
                    <MudTextField @bind-Value="model.PropertyName"
                                  Variant="Variant.Outlined"
                                  Class="form-input"
                                  Placeholder="Danmark Hotel"
                                  Required="true"
                                  DisableUnderLine="true"
                                  @onblur="SaveToLocalStorage" />
                </div>

                <!-- Property Type -->
                <div class="form-group">
                    <label class="form-label">Property Type *</label>
                    <div class="property-types-container">
                        <!-- Row 1 -->
                        <div class="checkbox-item">
                            <input type="checkbox" id="hotel" @bind="model.PropertyTypes.Hotel" @bind:after="SaveToLocalStorage" />
                            <label for="hotel" class="property-type-label">Hotel</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="guesthouse" @bind="model.PropertyTypes.Guesthouse" @bind:after="SaveToLocalStorage" />
                            <label for="guesthouse" class="property-type-label">Guesthouse</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="bnb" @bind="model.PropertyTypes.BnB" @bind:after="SaveToLocalStorage" />
                            <label for="bnb" class="property-type-label">B&B</label>
                        </div>
                        <!-- Row 2 -->
                        <div class="checkbox-item">
                            <input type="checkbox" id="apartment" @bind="model.PropertyTypes.Apartment" @bind:after="SaveToLocalStorage" />
                            <label for="apartment" class="property-type-label">Apartment</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="villa" @bind="model.PropertyTypes.Villa" @bind:after="SaveToLocalStorage" />
                            <label for="villa" class="property-type-label">Villa</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="hostel" @bind="model.PropertyTypes.Hostel" @bind:after="SaveToLocalStorage" />
                            <label for="hostel" class="property-type-label">Hostel</label>
                        </div>
                        <!-- Row 3 -->
                        <div class="checkbox-item">
                            <input type="checkbox" id="resort" @bind="model.PropertyTypes.Resort" @bind:after="SaveToLocalStorage" />
                            <label for="resort" class="property-type-label">Resort</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="lodge" @bind="model.PropertyTypes.Lodge" @bind:after="SaveToLocalStorage" />
                            <label for="lodge" class="property-type-label">Lodge</label>
                        </div>
                    </div>
                </div>

                <!-- Star Rating and Currency Row -->
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Star Rating *</label>
                        <select class="form-select-custom" @bind="model.StarRating" @bind:after="SaveToLocalStorage" required>
                            <option value="0">Select rating</option>
                            <option value="1">1 star</option>
                            <option value="2">2 star</option>
                            <option value="3">3 star</option>
                            <option value="4">4 star</option>
                            <option value="5">5 star</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Currency *</label>
                        <select class="form-select-custom" @bind="model.Currency" @bind:after="SaveToLocalStorage" required>
                            <option value="">Select currency</option>
                            <option value="AED">AED - UAE Dirham</option>
                            <option value="AUD">AUD - Australian Dollar</option>
                            <option value="CAD">CAD - Canadian Dollar</option>
                            <option value="CHF">CHF - Swiss Franc</option>
                            <option value="DKK">DKK - Danish Krone</option>
                            <option value="EUR">EUR - Euro</option>
                            <option value="GBP">GBP - British Pound</option>
                            <option value="JPY">JPY - Japanese Yen</option>
                            <option value="NOK">NOK - Norwegian Krone</option>
                            <option value="SEK">SEK - Swedish Krona</option>
                            <option value="USD">USD - US Dollar</option>
                        </select>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label class="form-label">Description *</label>
                    <textarea class="form-textarea-native"
                              @bind="model.Description"
                              @onblur="SaveToLocalStorage"
                              rows="5"
                              required
                              placeholder=""></textarea>
                </div>
            </MudForm>

            <!-- Footer with Buttons -->
            <WizardFooter OnBack="HandleBack"
                          OnNext="HandleNext"
                          BackDisabled="true"
                          NextDisabled="@(!IsFormValid())" />
        </div>
    </div>
</div>

