        public bool Hostel { get; set; }
        public bool Hotel { get; set; }
        public bool Lodge { get; set; }
        public bool Resort { get; set; }
        public bool Villa { get; set; }

        public bool HasAnySelected()
        {
            return Apartment || BnB || Guesthouse || Hostel || Hotel || Lodge || Resort || Villa;
        }

        public int ToFlagsInt()
        {
            int flags = 0;

            // Map boolean properties to flags enum using bitwise OR
            // PropertyType flags: Apartment=1, BAndB=2, Guesthouse=4, Hostel=8, Hotel=16, Lodge=32, Resort=64
