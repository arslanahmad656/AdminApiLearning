<div class="view-group-container">
    <!-- Top Header Bar (Inlined) -->
    <div class="top-right-section">
        <div class="top-right-profile">
            @if (!string.IsNullOrEmpty(groupImageUrl))
            {
                <img class="profile-img" src="@groupImageUrl" alt="Group Logo" />
            }
            else
            {
                <div class="group-logo-placeholder">
                    @(groupName?.Length > 0 ? groupName.Substring(0, 1).ToUpper() : "G")
                </div>
            }
            <span class="group-name-text">@(string.IsNullOrEmpty(groupName) ? "Loading..." : groupName)</span>
            <img src="icons/dropdown.png" alt="Dropdown" class="dropdown-icon" />
        </div>

        <div class="top-right-icons">
            <img src="icons/searchicon.png" alt="Search" />
        </div>

        <div class="top-right-icons" @onclick="HandleSettingsClick">
            <img src="icons/settings.png" alt="Settings" />
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        </div>
    }
    else if (properties.Count == 0)
    {
        <!-- No Properties Card -->
        <div class="no-properties-card">
            <div class="card-content">
                <div class="greeting-section">
                    <h2 class="greeting-title">Hi @userName!</h2>
                    <p class="greeting-message">You don't have any properties added yet.</p>
                </div>
                <div class="action-section">
                    <button class="add-property-button" @onclick="HandleAddProperty">
                        Add property +
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Properties List View -->
        <div class="properties-header">
            <h1 class="properties-title">Properties</h1>
            <div class="header-actions">
                <div class="sort-dropdown" @onclick="ToggleSortDropdown">
                    <img src="icons/filter.svg" alt="Filter" width="24" height="24" loading="lazy" />
                    <span>Sort by: <strong>@GetSortLabel()</strong></span>
                    <svg class="dropdown-arrow @(isSortDropdownOpen ? "open" : "")" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 1.5L6 6.5L11 1.5" stroke="#1C1B1F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    @if (isSortDropdownOpen)
                    {
                        <div class="sort-dropdown-menu">
                            <div class="sort-option @(currentSortOption == SortOption.AZ ? "active" : "")" @onclick="() => ApplySort(SortOption.AZ)" @onclick:stopPropagation="true">
                                A-Z
                            </div>
                            <div class="sort-option @(currentSortOption == SortOption.ZA ? "active" : "")" @onclick="() => ApplySort(SortOption.ZA)" @onclick:stopPropagation="true">
                                Z-A
                            </div>
                        </div>
                    }
                </div>
                <button class="add-property-button" @onclick="HandleAddProperty">
                    Add Property +
                </button>
            </div>
        </div>

        <!-- Properties Cards with Virtualization for performance -->
        <Virtualize Items="@properties" Context="property" OverscanCount="2">
            <div class="property-card" @key="property.PropertyId" @onclick="() => NavigateToProperty(property.PropertyId)">
                <div class="property-card-header">
                    <div class="property-info">
                        <div class="property-logo">
                            @if (property.FileIds != null && property.FileIds.ContainsKey("Favicon"))
                            {
                                <img src="@GetPropertyImageUrl(property.GroupId, property.PropertyId, property.FileIds["Favicon"])" alt="@property.PropertyName" />
                            }
                            else
                            {
                                <div class="property-logo-placeholder">
                                    @(property.PropertyName?.Length > 0 ? property.PropertyName.Substring(0, 1).ToUpper() : "P")
                                </div>
                            }
                        </div>
                        <h3 class="property-name">@property.PropertyName</h3>
                        <button class="website-button" @onclick="() => OpenWebsite(property.Website)" @onclick:stopPropagation="true" title="Visit website">
                            <img src="icons/globe-link.svg" alt="Website" width="25" height="25" loading="lazy" />
                        </button>
                    </div>
                    <div class="property-status">
                        <span class="status-badge @(property.IsActive ? "active" : "inactive")">@(property.IsActive ? "Active" : "Inactive")</span>
                        <div class="property-menu" @onclick:stopPropagation="true">
                            <MudMenu Icon="@Icons.Material.Filled.Settings" Size="Size.Small" Dense="true" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
                                <MudMenuItem OnClick="@(() => EditProperty(property))">
                                    View / Edit Property
                                </MudMenuItem>
                            </MudMenu>
                        </div>
                    </div>
                </div>

                <div class="property-card-divider"></div>

                <div class="property-card-details">
                    <div class="detail-row">
                        <span class="detail-address">@FormatAddress(property)</span>
                        <div class="detail-contact">
                            <img src="icons/email.svg" alt="Email" width="25" height="25" loading="lazy" />
                            <span>@(property.ContactName ?? "")</span>
                        </div>
                    </div>
                </div>

                <div class="property-card-services">
                    <div class="service-item booking-engine">
                        <span class="service-indicator"></span>
                        <span class="service-name">Booking engine</span>
                    </div>
                    <div class="service-item aro-analytics">
                        <span class="service-indicator"></span>
                        <span class="service-name">Ar√≥ Analytics</span>
                    </div>
                </div>
            </div>
        </Virtualize>
    }
</div>

@code {
    [Parameter] public Guid? GroupId { get; set; } = Guid.Empty;

    [Inject] private NavigationManager? NavigationManager { get; set; }

    private string userName = "there";
    private string groupName = "";
    private string? groupImageUrl = null;
    private bool isLoading = true;
    private List<PropertyListItemResponse> properties = new();
    private bool isSortDropdownOpen = false;
    private SortOption currentSortOption = SortOption.AZ;
    private bool shouldRender = true;

    // Cached values for performance
    private string? cachedApiBaseAddress;
    private Dictionary<Guid, string> propertyImageUrlCache = new();

    private enum SortOption
    {
        AZ,
        ZA
    }

    // Optimize rendering - only re-render when necessary
    protected override bool ShouldRender() => shouldRender;

    protected override async Task OnInitializedAsync()
    {
        // Load all data in parallel for better performance
        if (GroupId.HasValue && GroupId.Value != Guid.Empty)
        {
            // Create tasks for parallel execution
            var userTask = LoadUserInfoAsync();
            var groupTask = LoadGroupInfoAsync(GroupId.Value);
            var propertiesTask = PropertyService.GetPropertiesByGroupIdAsync(GroupId.Value);

            // Wait for all tasks to complete in parallel
            await Task.WhenAll(userTask, groupTask, propertiesTask);

            // Get results
            properties = propertiesTask.Result;

            // Apply default A-Z sorting
            SortProperties();
        }
        else
        {
            // Only load user info if no group
            await LoadUserInfoAsync();
        }

        isLoading = false;
    }

    private async Task LoadUserInfoAsync()
    {
        try
        {
            var userInfo = await AuthService.GetCurrentUserAsync();
            if (userInfo != null && !string.IsNullOrEmpty(userInfo.DisplayName))
            {
                userName = userInfo.DisplayName.Split(' ')[0];
            }
        }
        catch
        {
            userName = "there";
        }
    }

    private async Task LoadGroupInfoAsync(Guid groupId)
    {
        try
        {
            var groupResponse = await GroupService.GetGroup(new GetGroupRequest(groupId, "PrimaryContact"));
            if (groupResponse?.Group != null)
            {
                groupName = groupResponse.Group.GroupName ?? "";

                // Construct image URL from LogoId
                if (groupResponse.Group.LogoId.HasValue && groupResponse.Group.LogoId.Value != Guid.Empty)
                {
                    cachedApiBaseAddress ??= Configuration["ApiBaseAddress"]?.TrimEnd('/') ?? "https://localhost:7225";
                    groupImageUrl = $"{cachedApiBaseAddress}/api/group/image/{groupId}/{groupResponse.Group.LogoId.Value}";
                }
            }
        }
        catch (Exception ex)
        {
            // Error loading group
            groupName = "";
            groupImageUrl = null;
        }
    }

    private void ToggleSortDropdown()
    {
        isSortDropdownOpen = !isSortDropdownOpen;
    }

    private void ApplySort(SortOption option)
    {
        currentSortOption = option;
        SortProperties();
        isSortDropdownOpen = false;
    }

    private void SortProperties()
    {
        properties = currentSortOption switch
        {
            SortOption.AZ => properties.OrderBy(p => p.PropertyName, StringComparer.OrdinalIgnoreCase).ToList(),
            SortOption.ZA => properties.OrderByDescending(p => p.PropertyName, StringComparer.OrdinalIgnoreCase).ToList(),
            _ => properties
        };
    }

    private string GetSortLabel()
    {
        return currentSortOption switch
        {
            SortOption.AZ => "A-Z",
            SortOption.ZA => "Z-A",
            _ => "A-Z"
        };
    }

    private string FormatAddress(PropertyListItemResponse property)
    {
        var parts = new List<string>();

        if (!string.IsNullOrWhiteSpace(property.AddressLine1))
            parts.Add(property.AddressLine1);

        var cityPart = string.Join(" ", new[] { property.PostalCode, property.City }
            .Where(s => !string.IsNullOrWhiteSpace(s)));

        if (!string.IsNullOrWhiteSpace(cityPart))
            parts.Add(cityPart);

        return string.Join(", ", parts);
    }

    private string GetPropertyImageUrl(Guid groupId, Guid propertyId, Guid imageId)
    {
        // Check cache first
        if (propertyImageUrlCache.TryGetValue(imageId, out var cachedUrl))
        {
            return cachedUrl;
        }

        // Cache the API base address on first use
        cachedApiBaseAddress ??= Configuration["ApiBaseAddress"]?.TrimEnd('/') ?? "https://localhost:7225";

        var url = $"{cachedApiBaseAddress}/api/property/image/{groupId}/{propertyId}/{imageId}";
        propertyImageUrlCache[imageId] = url;
        return url;
    }

    private async Task OpenWebsite(string? website)
    {
        if (!string.IsNullOrEmpty(website))
        {
            var url = website.StartsWith("http") ? website : $"https://{website}";
            await JSRuntime.InvokeVoidAsync("window.open", url, "_blank");
        }
    }

    private async Task HandleAddProperty()
    {
        // Store GroupId in localStorage for property wizard
        if (GroupId.HasValue && GroupId.Value != Guid.Empty)
        {
            // Store the selected group ID for the wizard pages to use
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", GroupId.Value.ToString());

            // Use the CREATE storage key (separate from edit keys)
            var storageKey = PropertyWizardModel.GetCreateStorageKey(GroupId.Value);

            // Always start fresh for new property creation
            var wizardModel = new PropertyWizardModel
            {
                GroupId = GroupId.Value,
                IsEditMode = false,
                PropertyId = null,
                CurrentStep = 1
            };

            var json = JsonSerializer.Serialize(wizardModel);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", storageKey, json);

            // Store current property ID as null (create mode)
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "CurrentPropertyId", "");
        }

        // Navigate to property information wizard
        NavigationManager?.NavigateTo("/property/information");
    }

    private void HandleSettingsClick()
    {
        NavigationManager?.NavigateTo("/settings");
    }

    private void NavigateToProperty(Guid propertyId)
    {
        NavigationManager?.NavigateTo($"/property/{GroupId}/{propertyId}/rules");
    }

    private async Task EditProperty(PropertyListItemResponse property)
    {
        // Load the property data from API and populate the wizard model
        var propertyData = await PropertyService.GetPropertyByIdAsync(property.GroupId, property.PropertyId);
        if (propertyData == null)
        {
            Snackbar.Add("Failed to load property data", MudBlazor.Severity.Error);
            return;
        }

        // Create wizard model with existing data in edit mode
        var wizardModel = new PropertyWizardModel
        {
            IsEditMode = true,
            PropertyId = property.PropertyId,
            GroupId = property.GroupId,
            PropertyName = propertyData.PropertyName ?? "",
            StarRating = propertyData.StarRating,
            Currency = propertyData.Currency ?? "",
            Description = propertyData.Description ?? "",
            AddressLine1 = propertyData.AddressLine1 ?? "",
            AddressLine2 = propertyData.AddressLine2 ?? "",
            City = propertyData.City ?? "",
            Country = propertyData.Country ?? "",
            PostalCode = propertyData.PostalCode ?? "",
            PhoneNumber = propertyData.PhoneNumber ?? "",
            Website = propertyData.Website ?? "",
            ContactName = propertyData.ContactName ?? "",
            ContactEmail = propertyData.ContactEmail ?? "",
            KeySellingPoints = propertyData.KeySellingPoints ?? new List<string>(),
            MarketingTitle = propertyData.MarketingTitle ?? "",
            MarketingDescription = propertyData.MarketingDescription ?? "",
            CurrentStep = 1
        };

        // Set property types from API response
        if (propertyData.PropertyTypes != null)
        {
            foreach (var type in propertyData.PropertyTypes)
            {
                switch (type)
                {
                    case "Hotel": wizardModel.PropertyTypes.Hotel = true; break;
                    case "Guesthouse": wizardModel.PropertyTypes.Guesthouse = true; break;
                    case "BAndB": wizardModel.PropertyTypes.BnB = true; break;
                    case "Apartment": wizardModel.PropertyTypes.Apartment = true; break;
                    case "Hostel": wizardModel.PropertyTypes.Hostel = true; break;
                    case "Resort": wizardModel.PropertyTypes.Resort = true; break;
                    case "Lodge": wizardModel.PropertyTypes.Lodge = true; break;
                }
            }
        }

        // Store existing file IDs and URLs for reference
        if (propertyData.FileIds != null)
        {
            cachedApiBaseAddress ??= Configuration["ApiBaseAddress"]?.TrimEnd('/') ?? "https://localhost:7225";

            if (propertyData.FileIds.TryGetValue("Favicon", out var faviconId))
            {
                wizardModel.ExistingFaviconId = faviconId;
                wizardModel.Favicon = new PropertyFileModel
                {
                    FileName = "Favicon",
                    FileId = faviconId,
                    Url = $"{cachedApiBaseAddress}/api/property/image/{property.GroupId}/{property.PropertyId}/{faviconId}"
                };
            }
            if (propertyData.FileIds.TryGetValue("Banner1", out var banner1Id))
            {
                wizardModel.ExistingBanner1Id = banner1Id;
                wizardModel.Banner1 = new PropertyFileModel
                {
                    FileName = "Banner1",
                    FileId = banner1Id,
                    Url = $"{cachedApiBaseAddress}/api/property/image/{property.GroupId}/{property.PropertyId}/{banner1Id}"
                };
            }
            if (propertyData.FileIds.TryGetValue("Banner2", out var banner2Id))
            {
                wizardModel.ExistingBanner2Id = banner2Id;
                wizardModel.Banner2 = new PropertyFileModel
                {
                    FileName = "Banner2",
                    FileId = banner2Id,
                    Url = $"{cachedApiBaseAddress}/api/property/image/{property.GroupId}/{property.PropertyId}/{banner2Id}"
                };
            }
        }

        // Store in localStorage using EDIT storage key (property-specific)
        var storageKey = PropertyWizardModel.GetEditStorageKey(property.GroupId, property.PropertyId);
        var json = JsonSerializer.Serialize(wizardModel);
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", storageKey, json);
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "SelectedGroupId", property.GroupId.ToString());
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "CurrentPropertyId", property.PropertyId.ToString());

        // Navigate to property wizard in edit mode
        NavigationManager?.NavigateTo($"/property/information?propertyId={property.PropertyId}&edit=true");
    }

}

