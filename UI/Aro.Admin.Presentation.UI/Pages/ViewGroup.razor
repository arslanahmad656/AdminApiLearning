        // NavigationManager?.NavigateTo("/search");
    }
    private void HandleAddProperty()
    {
        // Navigate to property information wizard
        NavigationManager?.NavigateTo("/property/information");
    }


    private void DoSomething(int option)
    {
        
    }
}
