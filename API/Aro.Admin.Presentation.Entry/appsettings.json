  },
  "PasswordHistorySettings": {
    "Enabled": true,
    "HistoryCount": 3,
    "ExpireAfterDays": 180
  },
  "PasswordPolicy": {
    "MinLength": 8,
    "RequireDigit": true,
    "MinUniqueCharacters": 4,
    "RequireLowerCase": true,
    "RequireUpperCase": true,
    "RequirePunctuation": true
  },
  "AzureSettings": {
    "EnableCredentialLogging": false
  },
  "AzureBlobStorage": {
